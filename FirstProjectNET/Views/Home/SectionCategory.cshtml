@model FirstProjectNET.Models.ViewModel.HomeViewModel
<section class="section-margin">
    <div class="container">
        <div class="section-intro text-center pb-80px">
            <div class="section-intro__style">
                <img src="~/TemplateLayout/Page/img/home/bed-icon.png" alt="">
            </div>
            <h2>Explore Our Rooms</h2>
        </div>

        <div class="row">
            @{
                int i = 0;
            }
            @foreach (var room in Model.Categories)
            {
                i++;
                string category = (room.CategoryID.ToString().Substring(0, room.CategoryID.ToString().Length - 2));
                string price = string.Format("{0:N0} VND", room.Price);
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <div class="card card-explore">
                        <div class="card-explore__img">
                            <img class="card-img" src="/TemplateLayout/Page/img/room/room-b@(i).jpg" alt="">
                        </div>
                        <div class="card-body">
                            <h3 class="card-explore__price">@price<sub>/ Per Night</sub></h3>
                            <h4 class="card-explore__title"><a href="#">@category</a></h4>
                            <p>Beginning fourth dominion creeping god was. Beginning, which fly yieldi dry beast moved blessed </p>
                            <a class="card-explore__link" href="#">Book Now <i class="ti-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>