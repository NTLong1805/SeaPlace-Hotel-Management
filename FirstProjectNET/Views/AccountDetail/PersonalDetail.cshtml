@model FirstProjectNET.Models.ViewModel.CustomerViewModel

<section class="blog-banner-area">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>Detail Information</h1>
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Detail Information</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<div class="review-add">
    <h1 style="display:flex;justify-content:center">Account Information</h1>
    <form id="accountForm" class="ra-form" style="margin-left:50px;" asp-action="PersonalDetail" asp-controller="AccountDetail" method="post">
        <div class="row">
            <div class="col-lg-5">
                <label asp-for="CustomerID"></label>
                <input type="text" id="CustomerID" placeholder="CustomerID" value="@Model.CustomerID" disabled asp-for="CustomerID"/>
            </div>
            <div class="col-lg-5">
                <label asp-for="AccountID"></label>
                <input type="text" id="AccountID" placeholder="AccountID" value="@Model.AccountID" disabled asp-for="AccountID"/>
            </div>
            <div class="col-lg-5">
                <label asp-for="FirstName"></label>
                <input type="text" placeholder="FirstName" value="@Model.FirstName" disabled  asp-for="FirstName"/>
            </div>
            <div class="col-lg-5">
                <label asp-for="LastName"></label>
                <input type="text" placeholder="LastName" value="@Model.LastName" disabled asp-for="LastName"/>
            </div>
            <div class="col-lg-5">
                <label asp-for="Email"></label>
                <input type="text" placeholder="Email" value="@Model.Email" disabled asp-for="Email" />
            </div>
            <div class="col-lg-5">
                <label asp-for="Address"></label>
                <input type="text" placeholder="Address" value="@Model.Address" disabled asp-for="Address" />
            </div>
            <div class="col-lg-5">
                <label asp-for="Phone"></label>
                <input type="tel" placeholder="Phone" value="@Model.Phone" disabled asp-for="Phone"/>
            </div>
            <div class="col-lg-5">
                <label asp-for="Membership"></label>
                <input type="text" placeholder="Membership" value="@Model.Membership.ToString()" disabled asp-for="Membership"/>
            </div>

            <div class="col-lg-12">
                <button type="button" id="btnEdit">Edit</button>
                <button type="submit" id="btnSave" disabled>Save</button>
                <button type="button" id="btnCancel" disabled>Cancel</button>
            </div>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("accountForm");
        const inputs = form.querySelectorAll("input:not(#CustomerID):not(#AccountID)"); // Loại trừ 2 input
        const btnEdit = document.getElementById("btnEdit");
        const btnSave = document.getElementById("btnSave");
        const btnCancel = document.getElementById("btnCancel");

        btnEdit.addEventListener("click", function () {
            inputs.forEach(input => input.removeAttribute("disabled")); // Bật input (trừ 2 ô CustomerID và AccountID)
            btnSave.removeAttribute("disabled"); // Bật Save
            btnCancel.removeAttribute("disabled"); // Bật Cancel
            btnEdit.setAttribute("disabled", true); // Khóa Edit
        });

        btnCancel.addEventListener("click", function () {
            inputs.forEach(input => input.setAttribute("disabled", true)); // Khóa lại input
            btnSave.setAttribute("disabled", true); // Khóa Save
            btnCancel.setAttribute("disabled", true); // Khóa Cancel
            btnEdit.removeAttribute("disabled"); // Bật lại Edit
        });
            
    });
</script>
